/**login.wxss**/
.login_con{
	background: url(../../images/login_bg.jpg) repeat;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	height:600rpx;
}

.userinfo-avatar {
	width: 256rpx;
	height: 256rpx;
	margin: 100rpx 0rpx 20rpx 0px;
	border-radius: 50%;
}

.userinfo-nickname {
	color: #fff;
	font-size:1rem;
	font-family:'microsoft yahei';
	line-height:2.5rem;
}
.btn_area{
	width: 100%;
	height: 100rpx;
	position: absolute;
	bottom:200rpx;
}

.useroprate {
	width: 600rpx;
	height: 100rpx;
	margin: 0 auto;
}

.useroprate .btn_imtechnic,.useroprate .btn_imcarowner{
	width:240rpx;
	height:100rpx;
	font-size:1rem;
	font-weight: bold;
	font-family:'microsoft yahei';
	line-height:2.5rem;
	color:#fff;
	border:2px solid #fff;
	display:inline-block;
	margin:0rpx 30rpx;
}

.useroprate .btn_imtechnic{
	background:#1fb1c2;
}

.useroprate .btn_imcarowner{
	background:#f15834;
}

.app-corporate{
	width:100%;
	position:absolute;
	bottom:0px;
	text-align:center;
	font-size:0.5rem;
	font-family:'microsoft yahei';
	line-height:2.5rem;
	color:#fff;
}